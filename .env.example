# Telegram bot
BOT_TOKEN=123456:ABCDEF_your_token_here

# Self-hosted Telegram Bot API Server
# Example: http://localhost:8081/bot
BOT_API_BASE_URL=http://localhost:8081/bot
# Example: http://localhost:8081/file/bot
BOT_API_FILE_URL=http://localhost:8081/file/bot

# If your Bot API server runs with --local, set true to allow file:// uploads
BOT_LOCAL_MODE=true

# HTTP timeouts (python-telegram-bot -> self-hosted Bot API server)
# Large sendDocument via local Bot API may take a long time to respond.
BOT_HTTP_CONNECT_TIMEOUT_SEC=10.0
BOT_HTTP_READ_TIMEOUT_SEC=600.0
BOT_HTTP_WRITE_TIMEOUT_SEC=600.0
BOT_HTTP_POOL_TIMEOUT_SEC=10.0

# Optional: map local filesystem paths when BOT_LOCAL_MODE=true.
# Useful when Bot API server runs in Docker and has downloads mounted at a different path.
# Example:
#   BOT_API_LOCAL_PATH_FROM=/Users/you/project/downloads
#   BOT_API_LOCAL_PATH_TO=/data/downloads
BOT_API_LOCAL_PATH_FROM=
BOT_API_LOCAL_PATH_TO=

# Downloads
DOWNLOAD_ROOT=./downloads

# Progress update throttling
PROGRESS_MIN_INTERVAL_SEC=1.0

# If yt-dlp doesn't emit progress for a while, the bot will still refresh the status message
# with elapsed time every N seconds.
PROGRESS_STALL_INTERVAL_SEC=10.0

# Logging
# DEBUG is useful to troubleshoot stuck downloads.
LOG_LEVEL=INFO

# Inline selection paging
PLAYLIST_PAGE_SIZE=10

# Selection session TTL (seconds)
# The bot stores selection state in memory while you pick playlist item/quality.
SELECTION_TTL_SEC=86400

# yt-dlp advanced options (optional)
# If YouTube (or another site) requires a JS runtime, install one and optionally pin it.
# Examples: deno, node
YTDLP_JS_RUNTIME=

# Remote components for yt-dlp (EJS challenge solver)
# Default behavior is equivalent to: ejs:github
YTDLP_REMOTE_COMPONENTS=ejs:github

# Telegram Bot API server (tdlib) credentials
# Get these from https://my.telegram.org
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Bot API server (docker-compose) settings
BOTAPI_HTTP_PORT=8081
BOTAPI_DATA_DIR=./botapi_data
BOTAPI_DOWNLOADS_MOUNT=./downloads
BOTAPI_DOWNLOADS_CONTAINER_PATH=/data/downloads

